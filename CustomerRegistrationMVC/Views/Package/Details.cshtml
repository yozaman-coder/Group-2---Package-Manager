@model ProductData.Package

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Package</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PackageId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PackageId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PkgName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PkgName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PkgStartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PkgStartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PkgEndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PkgEndDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PkgDesc)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PkgDesc)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PkgBasePrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PkgBasePrice)
        </dd>
        @*<dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PkgAgencyCommission)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PkgAgencyCommission)
            </dd>*@
    </dl>
    @if (ViewBag.ProductList != null)
    {
        <h4><u>Products Included In Package</u></h4>
        @foreach (var prod in ViewBag.ProductList)
        {
            <h6>@prod.ProdName</h6>
        }
    }
</div>
<div>
    @if (ViewBag.PageTracker == 1)
    {
        <div class="btn btn-secondary m-1">@Html.ActionLink("Back", "Index", "Booking", null, null)</div>
    }
    else if(ViewBag.PageTracker == 0)
    {
        <div class="btn btn-secondary m-1">@Html.ActionLink("Back", "Index", "Package", null, null)</div>
    }
</div>
