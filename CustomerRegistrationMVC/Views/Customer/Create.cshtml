@model CustomerWithCheckModel

@{
    ViewData["Title"] = "Create";
}
<br />
<br />
<section class="jumbotron-register">
    <div class="text-center">
        <h class="jumbotron-title">
            <b>Register Now!</b>
        </h>
    </div>
    <br />
    <div>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (ViewBag.CustomerID != null)
            {
                <input type="hidden" asp-for="Customer.CustomerId" value="@ViewBag.CustomerID" />
            }
            <div class="form-group row">
                <label asp-for="Customer.CustFirstName" class="control-label">First Name</label>
                <input asp-for="Customer.CustFirstName" class="form-control" />
                <span asp-validation-for="Customer.CustFirstName" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Customer.CustLastName" class="control-label">Last Name</label>
                <input asp-for="Customer.CustLastName" class="form-control" />
                <span asp-validation-for="Customer.CustLastName" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Customer.CustAddress" class="control-label">Address</label>
                <input asp-for="Customer.CustAddress" class="form-control" />
                <span asp-validation-for="Customer.CustAddress" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Customer.CustCity" class="control-label">City</label>
                <input asp-for="Customer.CustCity" class="form-control" />
                <span asp-validation-for="Customer.CustCity" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Customer.CustProv" class="control-label">Province</label>
                <select asp-items="@ViewBag.Provinces" asp-for="Customer.CustProv" class="form-control"></select>
                <span asp-validation-for="Customer.CustProv" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Customer.CustPostal" class="control-label">Postal Code</label>
                <input asp-for="Customer.CustPostal" class="form-control" />
                <span asp-validation-for="Customer.CustPostal" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Customer.CustCountry" value="Canada" />
            @*<div class="form-group">
                    <label asp-for="CustHomePhone" class="control-label"></label>
                    <input asp-for="CustHomePhone" class="form-control" />
                    <span asp-validation-for="CustHomePhone" class="text-danger"></span>
                </div>*@
            <div class="form-group row">
                <label asp-for="Customer.CustBusPhone" class="control-label">Phone Number</label>
                <input asp-for="Customer.CustBusPhone" class="form-control" />
                <span asp-validation-for="Customer.CustBusPhone" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Customer.CustEmail" class="control-label">Email</label>
                <input asp-for="Customer.CustEmail" class="form-control" />
                <span asp-validation-for="Customer.CustEmail" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                    <label asp-for="AgentId" class="control-label"></label>
                    <input asp-for="AgentId" class="form-control" />
                    <span asp-validation-for="AgentId" class="text-danger"></span>
                </div>*@
            <div class="form-group row">
                <label asp-for="Customer.CustPassword" class="control-label">Password</label>
                <input asp-for="Customer.CustPassword" class="form-control" />
                <span asp-validation-for="Customer.CustPassword" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="PassCheck" class="control-label">Re-type Password</label>
                <input asp-for="PassCheck" class="form-control" />
            </div>
            <div class="form-group row center-register-btn">
                @if (ViewBag.CustomerID != null)
                {
                    <input type="submit" value="Update" class="button1" /><div>&nbsp;&nbsp;</div>
                    <input class="button1" type="button" value="Cancel" onclick="location.href='@Url.Action("Index","Home")'" />
                }
                else
                {
                    <input type="submit" value="Create" class="button1" /><div>&nbsp;&nbsp;</div>
                    <input class="button1" type="reset" value="Cancel" onclick="location.href='@Url.Action("Index","Home")'" />
                }
            </div>
        </form>
        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
    </div>
</section>